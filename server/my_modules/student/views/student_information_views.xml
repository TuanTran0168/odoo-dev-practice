            <field name="res_model">student.information</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_information_list_view"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    TẠO HỌC SINH ĐI
                </p>
            </field>
        </record>

